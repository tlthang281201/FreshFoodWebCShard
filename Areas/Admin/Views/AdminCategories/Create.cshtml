@model ShoeShop.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
  <div class="col-xxl">
   <div class="card mb-4">
     <div class="card-header d-flex align-items-center justify-content-between">
          <h5 class="mb-0">Thêm danh mục</h5>
        </div>
        <div class="card-body">
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-name">Tên danh mục</label>
            <div class="col-sm-10">
            <input  type="text" required asp-for="CatName" class="form-control" />
            </div>
            <span asp-validation-for="CatName" class="text-danger"></span>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-company">Mô tả</label>
            <div class="col-sm-10">
            <input  type="text" required asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-email">Hiển thị</label>
            <div class="col-sm-10">
            <div class="input-group input-group-merge">

               <div class="form-check form-switch mb-2">
                          <input class="form-check-input" type="checkbox" asp-for="Published" checked />

                        </div>
            </div>

            <span asp-validation-for="Published" class="text-danger"></span>
            </div>
          </div>

          <div class="row justify-content-end">
            <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
          </div>
          </form>
        </div>
        </div>
  </div>
</div>

