@model ShoeShop.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- Basic Layout -->
<div class="col-xxl">
 <div class="card mb-4">
   <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Xoá danh mục</h5>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label" for="basic-default-name">Tên danh mục</label>
          <div class="col-sm-10">
          <input  type="text" class="form-control" id="basic-default-name" asp-for="CatName" class="form-control" />
          </div>
          <span asp-validation-for="CatName" class="text-danger"></span>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label" for="basic-default-company">Mô tả</label>
          <div class="col-sm-10">
          <input  type="text" class="form-control" id="basic-default-name" asp-for="Description" class="form-control" />
          </div>
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label" for="basic-default-email">Hiển thị</label>
          <div class="col-sm-10">
          <div class="input-group input-group-merge">

             <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" asp-for="Published" />

                      </div>
          </div>

          <span asp-validation-for="Published" class="text-danger"></span>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-sm-10">
              <form asp-action="Delete">
                    <input type="hidden" asp-for="CatId" />
                    <input type="submit" value="Xoá" class="btn btn-danger" />
                </form>
          </div>
        </div>
      </div>
      </div>
</div>
</div>
</div>
