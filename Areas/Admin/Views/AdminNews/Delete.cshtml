@model ShoeShop.Models.News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <style>
            a:visited {
              text-decoration: none;
            }

            /* mouse over link */
            a:hover {
              text-decoration: none;
            }

            /* selected link */
            a:active {
              text-decoration: none;
            }
            a {
              text-decoration: none;
            }
    </style>
}
<div class="row">
  <div class="col-xxl">
   <div class="card mb-4">
     <div class="card-header d-flex align-items-center justify-content-between">
          <h5 class="mb-0">Xoá tin tức</h5>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-name">Tiêu đề</label>
            <div class="col-sm-10">
                <input  type="text" required asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-name">Ảnh</label>
            <div class="col-sm-10">
            <input class="form-control" type="file" accept="image/png, image/jpeg" asp-for="Thumb" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-company">Mô tả ngắn</label>
            <div class="col-sm-10">
            <input  type="text" asp-for="Scontents" required class="form-control" />
            </div>
            <span asp-validation-for="Scontents" class="text-danger"></span>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-company">Nội dung</label>
            <div class="col-sm-10">
           <textarea  type="text" asp-for="Contents" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Contents" class="text-danger"></span>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-email">Hiển thị</label>
            <div class="col-sm-10">
            <div class="input-group input-group-merge">
               <div class="form-check form-switch mb-2">
                  <input class="form-check-input" type="checkbox" asp-for="Published" />
               </div>
            </div>
            <span asp-validation-for="Published" class="text-danger"></span>
            </div>
          </div>

          <div class="row justify-content-end">
            <div class="col-sm-10">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PostId" />
                    <input type="submit" value="Xoá" class="btn btn-danger" />
                </form>
            </div>
          </div>
        </div>
        </div>
  </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#Contents').summernote({
                height: 200,
                minHeight: null,
                maxHeight: null
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
}