@model ShoeShop.Models.Shipper

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
  <div class="col-xxl">
   <div class="card mb-4">
     <div class="card-header d-flex align-items-center justify-content-between">
          <h5 class="mb-0">Thêm người giao hàng</h5>
        </div>
        <div class="card-body">
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-name">Họ và tên</label>
            <div class="col-sm-10">
            <input  type="text" required asp-for="ShipperName" class="form-control" />
            </div>
            <span asp-validation-for="ShipperName" class="text-danger"></span>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-company">Số điện thoại</label>
            <div class="col-sm-10">
            <input  class="form-control" required asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="basic-default-company">Công ty</label>
            <div class="col-sm-10">
            <input  class="form-control" required asp-for="Company" class="form-control" />
            </div>
            <span asp-validation-for="Company" class="text-danger"></span>
          </div>
          <div class="row justify-content-end">
            <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
          </div>
          </form>
        </div>
        </div>
  </div>
</div>
