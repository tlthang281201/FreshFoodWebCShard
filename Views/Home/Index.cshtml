@section Scripts {
    <script>
      $(document).ready(function () {
        $(function(){
            $(".add-cart").click(function(){
                var productid = $(this).attr("ma-sp");
                $.ajax({
                    url: '/api/cart/add',
                    datatype: "json",
                    type: "POST",
                    data: {
                        productID: productid
                    },
                    success: function(results) {
                        loadheaderCart();
                        location.reload();
                    },
                    error: function(xhr) {
                        alert("Error");
                    }
                });
            })
        });
        function loadheaderCart() {
            $("#cart-number").load("/AjaxContent/NumberCart");
        }
      });
    </script>
}